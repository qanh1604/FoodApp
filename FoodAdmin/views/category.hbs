    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="../images/avatar3.png" class="img-circle" alt="User Image" />
        </div>
        <div class="pull-left info">
          <p style="color: #fff;">Alter</p>

          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      </div>
      <form action="#" method="get" class="sidebar-form">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="Search..." />
          <span class="input-group-btn">
            <button type='submit' name='seach' id='search-btn' class="btn btn-flat"><i
                class="fa fa-search"></i></button>
          </span>
        </div>
      </form>
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
        <li style="background-color: #1A2226; color: #fff;" class="header">MAIN NAVIGATION</li>
        <li class="treeview">
          <a href="#" style="color: #B8C7CE;" onclick="goToProducts()">
            <i class="fa fa-cubes"></i> <span>Product</span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li onclick="goToNewProduct()">
              <a href="#" style="color: #B8C7CE;">
                <i class="fa fa-plus-circle"></i>
                New Product
              </a>
            </li>
          </ul>
        </li>

        <li class="treeview">
          <a href="#" active>
            <i class="fa fa-tags"></i> <span>Category</span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li onclick="goToNewCategory()">
