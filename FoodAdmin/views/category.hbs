  <!-- Right side column. Contains the navbar and content of the page -->
  <div class="content-wrapper" style="margin-top: 10px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Category List
        <small>Control panel</small>
      </h1>
      <ol class="breadcrumb">
        <li onclick="goToProducts()"><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active" onclick="goToProducts()"><a href="#"><i class="fa fa-cubes"></i> Product</a></li>
        <li class="active">Category</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category</th>
            <th>Icon</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each list}}
          <tr>
            <td style="vertical-align: middle;">{{ this._id }}</td>
            <td style="vertical-align: middle;">{{ this.name }}</td>
            <td style="vertical-align: middle;"><img width="30" height="30"
                src="http://localhost:3001/images/{{ this.icon }}" alt="image"></td>
            <td style="vertical-align: middle;" class="text-right">
              <button type="button" class="btn btn-warning" onclick="goToEdit('{{ this._id }}')">Edit</button>
              <button type="button" class="btn btn-danger del" onclick="delCategory('{{ this._id }}')">Remove</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->
