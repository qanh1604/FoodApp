<script>
  function goToNewCategory() {
    window.location.href = '/product/category/add-category'
  }
  function goToNewProduct() {
    window.location.href = '/product/add-product'
  }
  function goToProducts() {
    window.location.href = '/product'
  }
  function goToEdit(_id) {
    window.location.href = '/product/category/edit-category/' + _id
  }
  function signOut() {
    window.location.href = '/logout'
  }

  function delCategory(_id) {
    var result = confirm("Are you sure want to delete?");
    if (result) {
      $.ajax({
        type: "DELETE",
        url: '/product/category/delete/' + _id,
        success: function (data) {
          if (data.res == true) {
            window.location.href = '/product/category'
          }
        }
      });
      $('.del').html('<img width="30" height="30" src="../images/loading.gif">');
      return true;
    }
    else {
      return false;
    }
  }
</script>