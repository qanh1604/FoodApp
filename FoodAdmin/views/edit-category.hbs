<script>

  var isNameValid = false; function ValidateName() { let name =
  document.getElementById('name').value if (!name || name.trim().length == 0 ||
  name.trim().length > 50) { document.getElementById('nameError').innerText =
  'Vui lòng nhập đúng địng dạng hoặc ít hơn 50 kí tự'
  document.getElementById('nameError').classList.remove('d-none') isNameValid =
  false } else { document.getElementById('nameError').innerText = ''
  document.getElementById('nameError').classList.add('d-none') isNameValid =
  true } validateForm() } function validateForm() { if (isNameValid == false) {
  document.getElementById('abc').disabled = true } else {
  document.getElementById('abc').disabled = false } } function goToProduct() {
  window.location.href = '/product' } function goToNewProduct() {
  window.location.href = '/product/add-product' } function goToCategory() {
  window.location.href = '/product/category' } function signOut() {
  window.location.href = '/logout' } function readURL(input) { if (input.files
  && input.files[0]) { var reader = new FileReader() reader.onload = function
  (e) { $('#showIcon').attr('src', e.target.result) }
  reader.readAsDataURL(input.files[0]) } } $("#icon").change(function () {
  readURL(this) })
</script>

