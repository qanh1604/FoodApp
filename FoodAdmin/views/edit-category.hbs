    <!-- Main content -->
    <section class="content">

      <form
        action="/product/category/edit-category/{{category._id}}"
        method="POST"
        class="col-sm-12"
      >
        <div class="form-group">
          <label for="name">Category:</label>
          <input
            required
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter Category"
            name="name"
            onchange="ValidateName()"
            pattern="^(?=.*\\@&!~`)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$"
            value="{{category.name}}"
          />
        </div>

        <div class="form-group">
          <img
            id="showIcon"
            width="100"
            height="100"
            src="http://localhost:3001/images/{{category.icon}}"
            alt="image"
          /><br /><br />
          <input
            required
            type="file"
            id="icon"
            name="icon"
            value="{{category.icon}}"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </section><!-- /.content -->
